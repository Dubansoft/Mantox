@{ 
    ViewBag.Title = "Inicio de sesion xd";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Iniciar Sesión</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    
    <!-- Bootstrap 3.3.6 -->
    @Styles.Render("~/adminLte/css/bootstrap/")

    <!-- Font Awesome -->
    @Styles.Render("~/adminLte/css/fontawesome/")

    <!-- Ionicons -->
    @Styles.Render("~/adminLte/css/ionicons/")

    <!-- Theme style -->
    @Styles.Render("~/adminLte/css/AdminLte/")

    <!-- iCheck -->
    @Styles.Render("~/adminLte/css/icheck/")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        @Scripts.Render("~/adminLte/js/htmlshiv/")
        @Scripts.Render("~/adminLte/js/respondjs/")
    <![endif]-->

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Mantox</b>Admin</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">

            @RenderBody()

        </div>

    </div>
    <!-- /.login-box -->

    <!-- jQuery -->
    @Scripts.Render("~/adminLte/js/jquery/")

    <!-- Bootstrap -->
    @Scripts.Render("~/adminLte/js/bootstrap/")

    <!-- Valiate -->
    @Scripts.Render("~/adminLte/js/validate/")

    <script>
				$().ready(function() {
				// Validar campos al levantar las teclas y al presionar el boton de envío

					$("#formulario_inicio_sesion").validate({
						rules: {
						    Email: {
						    	required: true,
						    	email: true
						    },
							Contrasena: "required"
						}
					});
				});
    </script>
</body>
</html>


